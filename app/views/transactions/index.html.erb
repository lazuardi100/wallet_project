<p style="color: green"><%= notice %></p>

<% content_for :title, "Transactions" %>

<p>Balance</p>
<h1>
  <%= number_to_currency(@wallet.balance) %>
</h1>

<p>wallet address</p>
<h4>
  <%= @wallet.wallet_address %>
</h4>


<%= link_to "New transaction", new_polymorphic_path([@parent, :transaction]), class: "btn btn-primary" %>
<%= link_to "Top up", polymorphic_path([@parent, :top_up]), class: "btn btn-primary" %>
<hr>
<div id="transactions" class="mt-3">
  <p>Transactions</p>
  <% @transactions.each do |transaction| %>
      <div class="card">
        <div class="card-body">
          <%= render transaction %>
          <%= link_to "Show this transaction", polymorphic_path([@parent, transaction]) %>
        </div>
      </div>
    <p>
    </p>
  <% end %>
</div>

