<%= form_with(model: [@parent, transaction]) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p> Balance: <%= number_to_currency(@wallet.balance) %> </p>

  <div class="form-group">
    <%= form.label :amount, class: "form-label" %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <div class="mt-3 form-group">
    <%= form.label :recipient_address, class: "form-label" %>
    <%= form.text_field :recipient_address, class: "form-control" %>
  </div>
  <div>
    <%= form.submit "Send Money", class: "btn btn-primary mt-3" %>
  </div>
<% end %>
